{
	"manifest_version": 2,
	
	"name": "Alfresco Upload",
	"description": "Carica file in Alfresco Share",
	"version": "1.0",
	"author": "Stefano La Tartaruga",

	"background": {
		"scripts": [ 
			"js/jquery-2.1.1.min.js",
			"js/alfresco-upload.js"
		],
		"persistent": false
	},

	"browser_action": {
		"default_icon": { 
			"19": "img/alfresco_logo_19.png", 
			"38": "img/alfresco_logo_38.png"
		},
		"default_popup": "pages/popup.html",
		"default_title": "Carica file"
	},
	
	"icons": { 
		"16": "img/alfresco_logo_16.png",
		"48": "img/alfresco_logo_48.png",
		"128": "img/alfresco_logo_128.png" 
	},

	"options_page": "pages/options.html",	
	
	"permissions": [
		"notifications",
		"tabs", 
		"storage",
		"http://*/*"
	]
}
